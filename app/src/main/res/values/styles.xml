<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowTranslucentStatus">false</item>
        <item name="android:windowTranslucentNavigation">false</item>
        <!--Android 5.x开始需要把颜色设置透明，否则导航栏会呈现系统默认的浅灰色-->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="colorAccent">@color/colorRed</item>
        <item name="colorPrimary">@color/colorRed</item>

    </style>

    <style name="Dialog_Fullscreen" parent="AlertDialog.AppCompat.Light">
        <!--<item name="android:windowFullscreen">true</item>-->
        <!--<item name="android:windowNoTitle">true</item>-->
        <!--<item name="android:windowBackground">@android:color/transparent</item>-->
    </style>

    <style name="TabLayoutStyle">
        <item name="android:textSize">@dimen/text_size_normal</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="line_horizontal_1px_light">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1px</item>
        <item name="android:background">#c9c9d2</item>
    </style>

    <style name="line_vertical_1px_light">
        <item name="android:layout_width">1px</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">#c9c9d2</item>
    </style>

    <style name="view_register_item_ll">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">56dp</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="view_register_item_iv">
        <item name="android:layout_width">30dp</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:layout_marginLeft">10dp</item>
    </style>

    <style name="view_register_item_et">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:textColor">#666</item>
        <item name="android:textColorHint">#999</item>
        <item name="android:textSize">16sp</item>
        <item name="android:background">@color/transparent</item>
    </style>


</resources>
