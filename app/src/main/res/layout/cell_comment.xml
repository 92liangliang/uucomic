<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical">

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#fff"
            android:paddingLeft="12dp"
            android:paddingTop="3dp"
            android:paddingBottom="8dp">

        <com.re.ng.uu.comic.view.widget.CircleImageView
                android:id="@+id/iv_avatar"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginTop="8dp"
                android:layout_marginRight="12dp"
                android:src="@mipmap/ic_avatar"
                app:border_color="@color/colorLine"
                app:border_width="0.1dp"/>

        <TextView
                android:id="@+id/tv_username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/iv_avatar"
                android:singleLine="true"
                android:layout_marginTop="6dp"
                android:text="大包子"
                android:textColor="#0097ec"
                android:textSize="14dp"/>

        <TextView
                android:id="@+id/tv_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/iv_avatar"
                android:layout_marginTop="2dp"
                android:layout_below="@+id/tv_username"
                android:singleLine="true"
                android:text="2020-12-15"
                android:textColor="#888"
                android:textSize="14dp"/>

        <TextView
                android:id="@+id/tv_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/iv_avatar"
                android:layout_marginRight="8dp"
                android:layout_below="@+id/iv_avatar"
                android:layout_marginTop="3dp"
                android:textSize="15dp"
                android:textColor="#333"
                android:text="传说中世界上有鸟型外星人的存在。因一次飞机意外，哆啦A梦、大雄、静香、小夫及胖虎等人进入了鸟托邦"
                android:textIsSelectable="true"/>

    </RelativeLayout>

    <View style="@style/line_horizontal_1px_light"/>
</LinearLayout>
