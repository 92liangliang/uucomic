<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#fff"
        android:orientation="vertical">

    <include layout="@layout/layout_top"/>

    <View style="@style/line_horizontal_1px_light"/>

    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:orientation="vertical"
                  android:gravity="center_horizontal">

        <ImageView android:layout_width="90dp"
                   android:layout_height="wrap_content"
                   android:adjustViewBounds="true"
                   android:layout_marginTop="30dp"
                   android:src="@drawable/ic_launcher"/>

        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:textSize="13sp"
                  android:textColor="#999"
                  android:layout_marginTop="20dp"
                  android:text="为了账号安全，注册后请尽快绑定手机"/>

        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:orientation="vertical"
                      android:layout_marginTop="20dp"
                      android:paddingLeft="15dp"
                      android:paddingRight="15dp">

            <LinearLayout style="@style/view_register_item_ll">

                <ImageView style="@style/view_register_item_iv"
                           android:src="@mipmap/ic_username"/>
                <EditText
                        android:id="@+id/et_username"
                        style="@style/view_register_item_et"
                        android:hint="请输入用户名"/>
            </LinearLayout>

            <View style="@style/line_horizontal_1px_light"/>

            <LinearLayout style="@style/view_register_item_ll">

                <ImageView style="@style/view_register_item_iv"
                           android:src="@mipmap/ic_password"/>
                <EditText
                        android:id="@+id/et_password"
                        style="@style/view_register_item_et"
                        android:inputType="textPassword"
                        android:hint="请输入密码"/>
            </LinearLayout>

            <View style="@style/line_horizontal_1px_light"/>

            <LinearLayout style="@style/view_register_item_ll">

                <ImageView style="@style/view_register_item_iv"
                           android:src="@mipmap/ic_password"/>
                <EditText
                        android:id="@+id/et_password_again"
                        style="@style/view_register_item_et"
                        android:inputType="textPassword"
                        android:hint="请再次输入密码"/>
            </LinearLayout>

            <View style="@style/line_horizontal_1px_light"/>

            <LinearLayout style="@style/view_register_item_ll"
                          android:visibility="gone">

                <ImageView style="@style/view_register_item_iv"
                           android:src="@mipmap/ic_auth_code"/>
                <EditText
                        android:id="@+id/et_auth_code"
                        style="@style/view_register_item_et"
                        android:inputType="textPassword"
                        android:hint="请输入验证码"/>
            </LinearLayout>

            <View style="@style/line_horizontal_1px_light"/>

            <LinearLayout style="@style/view_register_item_ll">

                <ImageView style="@style/view_register_item_iv"
                           android:src="@mipmap/ic_invite_id"/>
                <EditText
                        android:id="@+id/et_invite"
                        style="@style/view_register_item_et"
                        android:inputType="textPassword"
                        android:hint="请输入推荐人ID（可为空）"/>
            </LinearLayout>

            <View style="@style/line_horizontal_1px_light"/>
        </LinearLayout>

        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="48dp"
                      android:orientation="horizontal"
                      android:layout_marginTop="10dp">
            <View android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_weight="1"/>

            <TextView
                    android:id="@+id/tv_to_login"
                    android:layout_width="wrap_content"
                      android:layout_height="match_parent"
                      android:gravity="center"
                      android:textSize="14sp"
                      android:autoLink="all"
                      android:text="直接登录"
                      android:layout_marginRight="20dp"
                      android:textColor="@color/colorRed"/>
        </LinearLayout>

        <TextView
                android:id="@+id/tv_register"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/bg_r_5_main_color_side"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:gravity="center"
                android:textSize="18sp"
                android:textColor="@color/colorRed"
                android:text="注册"/>
    </LinearLayout>

</LinearLayout>